# ToyApi Local Development Environment Variables

# Environment Configuration
ENVIRONMENT=local
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# Local DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
TABLE_NAME=toyapi-local-items
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# Mock Cognito Configuration (for local development)
USER_POOL_ID=local-user-pool
USER_POOL_CLIENT_ID=local-client-id

# SAM Local Configuration
SAM_CLI_TELEMETRY=0
SAM_LOCAL_PORT=3000

# Local API Configuration
LOCAL_API_URL=http://localhost:3000

# Debug Configuration
DEBUG=true
LOG_LEVEL=DEBUG

# Mock Authentication (for local testing)
MOCK_AUTHENTICATION=true
LOCAL_TEST_USER_ID=local-user-12345
LOCAL_TEST_USERNAME=localuser

# Local Development Flags
SKIP_COGNITO_VALIDATION=true
USE_LOCAL_DYNAMODB=true
ENABLE_CORS=true